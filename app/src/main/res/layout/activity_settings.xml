<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/another_screen_background"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_top"
        android:paddingHorizontal="@dimen/padding_main"
        android:paddingBottom="@dimen/padding_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/another_screen_background"
            android:orientation="horizontal"
            android:padding="0dp">

            <Button
                android:id="@+id/button_to_main"
                android:layout_width="@dimen/botton_size"
                android:layout_height="match_parent"
                android:backgroundTint="@color/another_screen_background"
                android:textColor="@color/another_screen_title"
                app:icon="@drawable/back_vector"
                app:iconGravity="textStart"
                app:iconTint="@color/another_screen_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/another_screen_background"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/botton_size"
                android:gravity="start"
                android:text="@string/button_media"
                android:textColor="@color/another_screen_title"
                android:textSize="@dimen/text_big"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_big"
        android:orientation="vertical">


        <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tools_panel_height">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="@string/tools_dark_theme"
                        android:textColor="@color/another_screen_title"
                        android:textSize="@dimen/text_middle"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"/>
                </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tools_panel_height">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:text="@string/tools_share_the_app"
                android:textColor="@color/another_screen_title"
                android:textSize="@dimen/text_middle"/>

            <ImageView
                android:layout_width="@dimen/botton_size"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:scaleType="centerInside"
                android:src="@drawable/share_vector" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tools_panel_height">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:text="@string/tools_write_to_support"
                android:scaleType="centerInside"
                android:textColor="@color/another_screen_title"
                android:textSize="@dimen/text_middle"/>

            <ImageView
                android:layout_width="@dimen/botton_size"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/support_vector" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tools_panel_height">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:text="@string/tools_user_agreement"
                android:textColor="@color/another_screen_title"
                android:textSize="@dimen/text_middle"/>


            <ImageView
                android:layout_width="@dimen/botton_size"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_forward_vector" />
        </FrameLayout>

    </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>