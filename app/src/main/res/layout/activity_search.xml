<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/another_screen_background"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_top"
        android:paddingHorizontal="@dimen/padding_main"
        android:paddingBottom="@dimen/padding_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/another_screen_background"
            android:orientation="horizontal"
            android:padding="0dp">

            <Button
                android:id="@+id/button_to_main"
                android:layout_width="@dimen/botton_size"
                android:layout_height="match_parent"
                android:backgroundTint="@color/another_screen_background"
                android:textColor="@color/another_screen_title"
                app:icon="@drawable/back_vector"
                app:iconGravity="textStart"
                app:iconTint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/botton_size"
                android:gravity="start"
                android:text="@string/button_find"
                android:textColor="@color/another_screen_title"
                android:textSize="@dimen/text_big"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>