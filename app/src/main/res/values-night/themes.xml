<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <!-- Основные цвета брэнда -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background экранов -->
        <item name="colorMainActivityBackground">@color/black</item>
        <item name="colorActivityBackground">@color/black</item>

        <!-- Экран настроек SettingsActivity  -->
        <item name="colorIconTint">@color/white</item>
        <item name="colorTextOnBackground">@color/white</item>
        <item name="colorText">@color/white</item>


        <!--  Switcher переключения темы в SettingsActivity  -->
        <item name="switcherThumbTint">@color/blue</item>
        <item name="switcherTrackTint">@color/blue_switcher</item>
        <item name="currentThemeSwitcherTitle">Светлая тема</item>


        <!--  EditText в SearchActivity  -->
        <item name="editTextHintColor">@color/black</item>
        <item name="editTextDrawableTint">@color/black</item>
        <item name="editTextBackgroundDrawable">@drawable/rounded_edittext_night</item>


        <!--  Список песен  -->
        <item name="dotColor">@color/white</item>
        <item name="arrowColor">@color/white</item>
        <item name="searchSongTextColor">@color/white</item>
        <item name="searchSongDetailsTextColor">@color/white</item>
        <item name="searchError">@drawable/search_error_dark_mode</item>
        <item name="searchNoResults">@drawable/search_no_results_dark_mode</item>



    </style>

</resources>