<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Главный экран -->
    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_small</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/padding_main</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">500</item>>
    </style>

    <!-- Кнопка Назад на разных Активити -->
    <style name="ButtonBackStyle">
        <item name="android:layout_width">@dimen/button_big_size</item>
        <item name="android:layout_height">@dimen/button_big_size</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/back_vector</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <!-- Стили для экрана Настроек -->
    <style name="SettingsPanelsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tools_panel_height</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>

    <style name="TitleActivityStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/padding_main</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SwitcherStyle">
        <item name="android:layout_width">@dimen/button_big_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:thumbTint">?attr/thumbTint</item>
        <item name="android:trackTint">?attr/trackTint</item>
    </style>

    <!-- Поиск в SearchActivity -->

    <style name="SearchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColorHint">?attr/editTextHintColor</item>
        <item name="android:background">?attr/editTextBackgroundDrawable</item>
        <item name="android:drawableTint">?attr/editTextDrawableTint</item>

    </style>

    <style name="ClearImageViewStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:src">@drawable/clear_icon_gray_24</item>

    </style>>

    <style name="SearchFrameStyle">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>



    <!-- Список песен в SearchActivity -->
    <style name="SongTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_track_name_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/searchSongTextColor</item>
        <item name="android:textSize">@dimen/search_text</item>
        <item name="android:textFontWeight">400</item>>
    </style>


    <style name="DetailsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_small_text</item>
        <item name="android:textColor">?attr/searchSongDetailsTextColor</item>
    </style>

    <style name="ArrowForwardStyle">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/arrow_forward</item>
        <item name="android:contentDescription">@string/search_image_view_description</item>
        <item name="tint">?attr/arrowColor</item>
    </style>



    <style name="DotStyle">
        <item name="android:layout_width">@dimen/search_artist_name_height</item>
        <item name="android:layout_height">@dimen/search_artist_name_height</item>
        <item name="android:src">@drawable/dot</item>
        <item name="android:contentDescription">@string/dot_description</item>
        <item name="tint">?attr/dotColor</item>
    </style>

    <style name="ArtWorkImageStyle">
        <item name="android:layout_width">@dimen/art_size</item>
        <item name="android:layout_height">@dimen/art_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/art_margin</item>
        <item name="android:layout_marginStart">@dimen/art_margin_start</item>
        <item name="android:contentDescription">@string/album_artwork_description</item>
    </style>

    <style name="ArtWorkCardStyle">
        <item name="android:layout_width">@dimen/art_size</item>
        <item name="android:layout_height">@dimen/art_size</item>
        <item name="android:layout_margin">@dimen/art_margin</item>
        <item name="cardBackgroundColor">?attr/colorActivityBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/artwork_radius</item>
    </style>



    <style name="SearchPlaceHolderStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">@dimen/search_result_error_text_margin_top</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="SearchErrorButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginTop">@dimen/search_result_error_button_margin_top</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:text">@string/search_error_button_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>>
        <item name="cornerRadius">@dimen/padding_main</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">center</item>

    </style>

</resources>