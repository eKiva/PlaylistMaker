<resources >
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Основные цвета брэнда -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Background экранов -->
        <item name="colorMainActivityBackground">@color/blue</item>
        <item name="colorActivityBackground">@color/white</item>


        <!-- Экран настроек -->
        <item name="colorIconTint">@color/gray</item>
        <item name="colorTextOnBackground">@color/white</item>
        <item name="colorText">@color/black</item>


        <!--  Switcher переключения темы в SettingsActivity  -->
        <item name="switcherThumbTint">@color/gray</item>
        <item name="switcherTrackTint">@color/gray</item>
        <item name="currentThemeSwitcherTitle">Темная тема</item>


        <!--  EditText в SearchActivity  -->
        <item name="editTextHintColor">@color/gray</item>
        <item name="editTextDrawableTint">@color/gray</item>
        <item name="editTextBackgroundDrawable">@drawable/rounded_edittext</item>

        <!--  Список песен  -->
        <item name="dotColor">@color/gray</item>
        <item name="arrowColor">@color/gray</item>
        <item name="searchSongTextColor">@color/black</item>
        <item name="searchSongDetailsTextColor">@color/gray</item>
        <item name="searchError">@drawable/search_error_light_mode</item>
        <item name="searchNoResults">@drawable/search_no_results_light_mode</item>

        <!--   -->


    </style>



</resources>